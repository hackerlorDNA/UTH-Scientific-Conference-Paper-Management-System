{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=uthconfms_review;Username=postgres;Password=123456",
    "Redis": "localhost:6379"
  },
  "JWT": {
    "Secret": "UTH_CONFMS_JWT_SECRET_KEY_2026_CHANGE_IN_PRODUCTION",
    "Issuer": "uth-confms-identity",
    "Audience": "uth-confms-services"
  },
  "InternalApiKey": "auth-secret-key-123",
  "Services": {
    "IdentityServiceUrl": "http://identity-service:5001",
    "SubmissionServiceUrl": "http://submission-service:5003",
    "NotificationServiceUrl": "http://notification-service:5005"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/review-service-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}